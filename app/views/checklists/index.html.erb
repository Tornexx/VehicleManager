<h1>Listing checklists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <td><%= checklist.name %></td>
        <td><%= checklist.comments %></td>
        <td><%= link_to 'Show', checklist %></td>
        <td><%= link_to 'Edit', edit_checklist_path(checklist) %></td>
        <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag new_checklist_path, method: :get do %>
  <%= select_tag :checked_item_type_id, options_from_collection_for_select(CheckedItemType.all, :id, :name) %>
  <%= submit_tag "New Checklist", name: nil %>
<% end %>
