<h1>Listing Reports</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Report</th>
      <th>User</th>
      <th>Vehicle</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <td><%= return_if_exists(checklist.checklist_type, :name) %></td>
        <td><%= return_if_exists(checklist.user, :email) %></td>
        <td><%= return_if_exists(checklist.vehicle, :number) %></td>
        <td><%= checklist.created_at.strftime("%a %b #{checklist.created_at.day.ordinalize}") %></td>
        <td><%= link_to 'Show', checklist %></td>
        <td><%= link_to 'Edit', edit_checklist_path(checklist) %></td>
        <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag new_checklist_path, method: :get do %>
  <%= select_tag :checklist_type_id, options_from_collection_for_select(ChecklistType.all, :id, :name) %>
  <%= submit_tag "New Checklist", name: nil %>
<% end %>
