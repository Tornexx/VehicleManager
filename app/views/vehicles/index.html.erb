<div>
  <h1>
    Vehicles
    <%= link_to new_vehicle_path, :class => "btn btn-default hoverable" do %>
      <%= 'New Vehicle' %>
      <div class='popup'>Add a new vehicle to the database!</div>
    <% end %>
  </h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th>Current mileage</th>
      <th>Assigned Driver</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.number, vehicle %></td>
        <td><%= number_with_delimiter(vehicle.current_mileage) %></td>
        <td><%= assigned_driver(vehicle) %></td>
        <td><%= link_to "Past inspections", vehicle_inspection_reports_past_inspections_path(vehicle: vehicle) %></td>
        <td><%= link_to "Weekly Vehicle Reports", weekly_reports_past_reports_path(vehicle: vehicle) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @vehicles, :class => "apple_pagination" %> 

