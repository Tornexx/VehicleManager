<%= form_for(@vehicle) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :current_mileage %><br>
    <%= f.number_field :current_mileage %>
  </div>
  <div class="field">
    <%= f.label :synthetic %><br>
    <%= f.check_box :synthetic %>
  </div>
  <div class="field">
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :plate_number %><br>
    <%= f.text_field :plate_number %>
  </div>
  <div class="field">
    <%= f.label :vin_number %><br>
    <%= f.text_field :vin_number %>
  </div>
  <div class="field">
    <%= f.label :gross_weight %><br>
    <%= f.text_field :gross_weight %>
  </div>
  <div class="field">
    <%= f.label :gas_card %><br>
    <%= f.text_field :gas_card %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= select_year @vehicle.year.to_i, { :prompt => "Year", 
                                            :start_year => Time.zone.now.year - 20, 
                                            :end_year => Time.zone.now.year + 1, 
                                            :field_name => :year, 
                                            :prefix => :vehicle }, {class: 'btn btn-default dropdown-toggle'} %>
  </div>
  <div class="field">
    <%= f.label :purchase_date %><br>
    <%= f.date_select :purchase_date, {:start_year => Date.today.year - 20, :end_year => Date.today.year + 1}, {class: 'btn btn-default dropdown-toggle'} %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Vehicle', class: 'btn btn-primary' %>
  </div>
<% end %>
