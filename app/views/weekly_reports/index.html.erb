<h1>List of Weekly Vehicle Checklists</h1>

<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Vehicle</th>
      <th>Driver</th>      
      <th>Mileage</th>
      <th>Appearance</th>
      <th>Tires</th>
      <th>Lights</th>
      <th>Mechanical</th>
      <th>Electrical</th>
      <th>Fluid levels</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_reports.each do |weekly_report| %>
      <tr>
        <td><%= weekly_report.vehicle.number %></td>
        <td><%= weekly_report.user.full_name %></td>
        <td><%= weekly_report.mileage %></td>
        <td><%= weekly_report.appearance %></td>
        <td><%= weekly_report.tires %></td>
        <td><%= weekly_report.lights %></td>
        <td><%= weekly_report.mechanical %></td>
        <td><%= weekly_report.electrical %></td>
        <td><%= weekly_report.fluid_levels %></td>
        <td><%= weekly_report.comments %></td>
        <td><%= link_to 'Show', weekly_report %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @weekly_reports, :class => "apple_pagination" %> 

