<h1>
  Listing Report Types
  <%= link_to new_checklist_type_path, :class => "btn btn-default hoverable" do %>
    <%= 'New Report Type' %>
    <div class='popup'>Add a new report type to the database!</div>
  <% end %>
</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklist_types.each do |checklist_type| %>
      <tr>
        <td><%= checklist_type.name %></td>
        <td><%= link_to 'Show', checklist_type %></td>
        <td><%= link_to 'Edit', edit_checklist_type_path(checklist_type) %></td>
        <td><%= link_to 'Destroy', checklist_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
